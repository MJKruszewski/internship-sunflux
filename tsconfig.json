{

    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020",
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      "allowJs": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "sourceRoot": "src",
      "lib": [
        "ES2020"
      ]
    },
    "include": [
      "docs/*",
      "src/**/*",
      "src/**/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }